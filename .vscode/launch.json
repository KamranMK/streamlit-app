    "version": "0.2.0",
    "configurations": [
    // Streamlit App Run Configuration
        {
            "name": "Streamlit: Run App",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/main.py"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Streamlit: Run MAIN",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/pages/Main.py"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}